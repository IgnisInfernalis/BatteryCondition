@using BatteryConditionInventory.Core.Entities;
@model BatteryCondition
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Состояние АКБ</title>
</head>
<body>
    <!-- <h3>Состояние АКБ производителя  модели  Номер </h3> -->
    <table>
        <tr>
            <td>Номер АКБ</td>
            <td>Модель АКБ</td>
            <td>Адрес</td>
            <td>Дата установки</td>
            <td>Емкость</td>
            <td>Батарейный блок</td>
        </tr>
        <tr>
            <td>@Model.BatteryLocalId</td>
            <td>@Model.BatteryModel.BatteryBrand.BatteryBrandName @Model.BatteryModel.BatteryModelName</td>
            <td>@Model.AddressByDates.LastOrDefault()?.House.Street.StreetName @Model.AddressByDates.LastOrDefault()?.House.HouseNumber</td>
            <td>@Model.AddressByDates.LastOrDefault()?.DateTime.Date</td>
            <td></td>
            <td><a href="/Home/GetBatteryPack/@Model.BatteryConditionBatteryPack.LastOrDefault()?.BatteryPackId">
                @Model.BatteryConditionBatteryPack.LastOrDefault()?.BatteryPack.AddressByDate.House.Street.StreetName
                @Model.BatteryConditionBatteryPack.LastOrDefault()?.BatteryPack.AddressByDate.House.HouseNumber </a>
            </td>
        </tr>
    </table>
    @Model.AddressByDates.First().Address
</body>
</html>